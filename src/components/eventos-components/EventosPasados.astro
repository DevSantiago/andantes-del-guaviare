<style>
    section {
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 40px;
    }

    section .container {
        text-align: left;
        width: 80%;
        margin-top: 20px;
    }

    section .container .subtitle {
        font-size: 1.2rem;
        font-weight: bold;
        background-color: #17ab5c;
        padding: 10px;
        border-radius: 10px;
    }

    section .container .text {
        margin-top: 20px;
    }

    section .container .ubicacion-imagen {
        display: flex;
        flex-direction: row;
        justify-content: center;
    }

    section .image-mobile {
        display: none;
    }
    
    section .ubicacion-imagen {
        display: flex;
        flex-direction: row;
        margin-top: 30px;
        align-items: center;
    }
    
    .ubicacion .fecha, .ubicacion .pin {
        display: flex;
        flex-direction: row;
        margin: 30px 20px 30px 20px;
    }

    .fecha p, .pin p {
        margin-left: 10px;        
    }

    @media (max-width: 768px) {

        section .ubicacion-imagen {
            display: flex;
            flex-direction: column-reverse;
            align-items: center;
        }

        section .image-desktop {
            display: none;
        }

        section .image-mobile {
            display: block;
        }



    }

</style>