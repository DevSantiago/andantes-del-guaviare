---
import { Image } from "astro:assets";
---

<section>
    <div class="container">
        <h2>CON EL APOYO DE</h2>
        <div class="avatar-container-desktop">
            <Image src="https://storage.googleapis.com/andantes-del-guaviare/03-andantes-del-guaviare.jpg" alt="Image" width="300px" height="150px" class="img-desktop"/>
            <Image src="https://storage.googleapis.com/andantes-del-guaviare/03-andantes-del-guaviare.jpg" alt="Image" width="300px" height="150px" class="img-desktop"/>
            <Image src="https://storage.googleapis.com/andantes-del-guaviare/03-andantes-del-guaviare.jpg" alt="Image" width="300px" height="150px" class="img-desktop"/>
        </div>
    </div>
</section>


<style>
    *{
        box-sizing: border-box;
        margin: 0;
    }

    section {
        display: flex;
        justify-content: center;
        margin-top: 30px;
        text-align: center;
    }

    section .container {
        /* background: yellowgreen; */
        width: 90%;

    }

    section .container h2 {
        font-size: 30px;
    }

    section .container .avatar-container-desktop {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        justify-items: center;
        margin-top: 30px;

    }


    @media (max-width: 768px) {
        section .container .avatar-container-desktop {
            grid-template-columns: repeat(1, 1fr);
            gap: 20px;
        }

        section .container .avatar-container-desktop .img-desktop {
            width: 200px;
            height: 100px;
        }



</style>